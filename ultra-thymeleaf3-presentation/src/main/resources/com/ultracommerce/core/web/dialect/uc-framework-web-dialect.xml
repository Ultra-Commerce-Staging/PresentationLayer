    <attribute-processor name="pagination-sort-link" class="com.ultracommerce.core.web.processor.PaginationSortLinkProcessor" />
    <attribute-processor name="price" class="com.ultracommerce.core.web.processor.PriceTextDisplayProcessor" />
    <attribute-processor name="togglefacetlink" class="com.ultracommerce.core.web.processor.ToggleFacetLinkProcessor" />
    <attribute-processor name="removefacetvalueslink" class="com.ultracommerce.core.web.processor.RemoveFacetValuesLinkProcessor" />
    
